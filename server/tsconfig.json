{
  "compilerOptions": {
    /* Target & Module - Modern Standard */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Output Settings */
    "outDir": "./dist",
    "rootDir": "..",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,

    /* Strict Type-Checking (Pondasi Anti-Any) [cite: 2026-01-10] */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    /* Linter-like Rules */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias untuk Shared Folder (Penting: Tambahkan baseUrl) */
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/src/*"]
    },

    /* Membungkam warning deprecation TS 5.x/6.x */
    "ignoreDeprecations": "6.0",

    /* Interop & Miscellaneous */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  /* Pastikan folder shared masuk dalam jangkauan kompilasi */
  "include": ["src/**/*", "../shared/src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
